<%= @link.user.username %>
<%= @link.title %>
<%= @link.url %>

<%= link_to "Edit Link", edit_link_url(@link.id) %>

<%= link_to "Links", links_url %>

<h1>Add Comment</h1>

<form action="<%= link_comments_url(@link) %>" method="post">
  <input type="hidden" name="authenticity_token" value="form_authenticity_form">

  <label>Comment
    <input type="text" name="comment[body]">
  </label>

  <input type="submit" value="Add Comment">
</form>

<h3>Comments</h3>
<ul>
  <% @link.comments.each do |comment| %>
    <li>
      <%= comment.body %>
      <%= button_to 'Remove Comment', comment_url(comment), method: :delete %>
    </li>
  <% end %>
</ul>
